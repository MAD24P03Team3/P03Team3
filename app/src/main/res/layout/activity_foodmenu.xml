<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".foodmenu">

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B9AFAF"
        app:layout_constraintStart_toStartOf="@id/main"
        app:layout_constraintTop_toTopOf="@id/main">

        <ImageView
            android:id="@+id/restImg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="8dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/restHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="20dp"
            android:layout_toRightOf="@id/restImg"
            android:text="Prata Boy"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/storeDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/restHeader"
            android:layout_marginStart="20dp"
            android:layout_toRightOf="@id/restImg"
            android:text="Store description" />

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/storeDesc"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/restImg"
            android:text="BLK 78 Our Space"/>

        <Button
            android:id="@+id/cart"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/location"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/restImg"
            android:background="@drawable/buttonresmenu"
            android:textSize="30dp"
            >

        </Button>

        <Button
            android:id="@+id/favourites"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/location"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/cart"
            android:background="@drawable/buttonresmenu"
            android:textSize="30dp">

        </Button>

        <Button
            android:id="@+id/review"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:layout_below="@id/location"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@id/favourites"
            android:background="@drawable/buttonresmenu"
            android:textSize="30dp">

        </Button>





    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclemenu"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/relative"
        app:layout_constraintStart_toStartOf="@id/main"
        android:scrollbars="vertical"

        />


</androidx.constraintlayout.widget.ConstraintLayout>